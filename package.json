{
	"name": "@styleframe/monorepo",
	"version": "1.0.0",
	"private": true,
	"description": "Write modern, clean, composable CSS using TypeScript, with a focus on simplicity and performance.",
	"author": "Alex Grozav <alex@styleframe.dev>",
	"scripts": {
		"dev": "turbo run dev",
		"dev:docs": "turbo run dev --filter @styleframe/docs",
		"release": "pnpm publish -r",
		"prerelease": "turbo run build --filter '!@styleframe/docs'",
		"build": "turbo run build",
		"test": "turbo run test",
		"typecheck": "turbo run typecheck",
		"lint": "oxlint",
		"format": "biome format --write",
		"prepare": "husky"
	},
	"keywords": [
		"styleframe",
		"css"
	],
	"homepage": "https://styleframe.dev",
	"repository": {
		"type": "git",
		"url": "https://github.com/styleframe-dev/styleframe"
	},
	"bugs": {
		"email": "support@styleframe.dev",
		"url": "https://github.com/styleframe-dev/styleframe/issues"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.2.2",
		"@changesets/cli": "^2.29.7",
		"@styleframe/config-typescript": "workspace:*",
		"husky": "catalog:",
		"lint-staged": "catalog:",
		"oxlint": "catalog:",
		"turbo": "catalog:",
		"typescript": "catalog:"
	},
	"packageManager": "pnpm@10.7.1+sha512.2d92c86b7928dc8284f53494fb4201f983da65f0fb4f0d40baafa5cf628fa31dae3e5968f12466f17df7e97310e30f343a648baea1b9b350685dafafffdf5808",
	"engines": {
		"node": ">=22.0.0",
		"pnpm": ">=10.7.1"
	},
	"lint-staged": {
		"*.{js,ts,jsx,tsx,json,yaml}": [
			"biome format --write --no-errors-on-unmatched"
		],
		"*.{js,ts,jsx,tsx}": [
			"oxlint --fix"
		]
	},
	"license": "MIT"
}
