{
	"name": "@styleframe/loader",
	"version": "0.0.0",
	"type": "module",
	"types": "./dist/index.d.ts",
	"module": "./dist/index.js",
	"main": "./dist/index.umd.cjs",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js",
			"require": "./dist/index.umd.cjs"
		}
	},
	"scripts": {
		"dev": "vite build --watch",
		"build": "pnpm typecheck && vite build",
		"typecheck": "tsc --noEmit",
		"test": "vitest run",
		"test:dev": "vitest --watch",
		"playground:build": "tsx src/playground/build.ts",
		"playground:load": "tsx src/playground/load.ts",
		"playground:watch": "tsx src/playground/watch.ts"
	},
	"dependencies": {
		"@styleframe/core": "workspace:^",
		"@styleframe/transpiler": "workspace:^",
		"c12": "^3.1.0"
	},
	"devDependencies": {
		"@styleframe/config-typescript": "workspace:^",
		"@styleframe/config-vite": "workspace:^",
		"tsx": "catalog:",
		"typescript": "catalog:",
		"vite": "catalog:",
		"vite-plugin-dts": "catalog:",
		"vite-plugin-node": "catalog:",
		"vitest": "catalog:"
	},
	"homepage": "https://github.com/styleframe-dev/styleframe#readme",
	"bugs": {
		"url": "https://github.com/styleframe-dev/styleframe/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/styleframe-dev/styleframe.git"
	},
	"author": "Alex Grozav <alex@styleframe.dev>"
